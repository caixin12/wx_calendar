/* pages/mypaper/index.wxss */
page{
    background: #f7f7f7;
}
.logo_con{
      background: #000;

    position: relative;
    padding-top: 50rpx;
}
.logo_bg{
    width: 750rpx;
    height: 454rpx;
    display: block;
    margin-bottom: 30rpx;
}
.set{
  position: absolute;
 padding-top: 6px;
  left: 45rpx;

}
.set image{
  width: 34rpx;
  height: 34rpx;

}
.userinfo{
    position: absolute;
    top:177rpx;    
    width: 750rpx;
    
}
.logopic{
    width: 138rpx;
    height: 138rpx;
    margin: 0 auto;
    display: block;
    border-radius: 100%;
    overflow: hidden;
    margin-bottom: 16rpx;
}
.nick{
    color: #ffffff;
    line-height: 50rpx;
    height: 50rpx;
    text-align: center;
    font-size: 34rpx;
    width: 100%;
    display: block;
}

.contact{
    position: fixed;
    width: 65rpx;
    height: 65rpx;
    bottom:20rpx;
    right: 55rpx;
    background: #09BB07;
    border-radius: 100%;
    padding:22rpx 12rpx 0 12rpx;
    text-align: center;
     box-shadow:0 0 20rpx rgba(0, 0, 0, .4);  
    
}
.contact image{
    position: absolute;
    width: 100rpx;
    height: 100rpx;
    top:0;
    left: 0;
    

}
.tablist{
    height: 130rpx;
    overflow: hidden;
}
.tabitem{
    float: left;
    width: 140rpx;
    height: 130rpx;
    border-bottom: 1px solid #f7f7f7;
    text-align: center;
    margin: 0 110rpx 0 120rpx;
    color: #000000;
    box-sizing: border-box;
    font-size: 30rpx;
}
.num{
    line-height: 60rpx;
    font-size: 42rpx;
    font-weight: bold;
}
.tabitem.active{
    border-bottom: 1px solid #000000;
}
.wallpagerlist{
  clear: both;
  height: auto;
  overflow: hidden;
  padding: 40rpx 0 20rpx 0;
}
.wallpager_item{
  float: left;
  width: 338rpx;
  height: 601rpx;
  margin: 0 0 26rpx  26rpx;
  position: relative;
}
.wallpager_item image{
  width: 100%;
  height:100%;
  border-radius: 5rpx;
}
.wallpager_item .link_bg{
 border-radius:3rpx;
}
.like_w{
  position: absolute;
 text-align: center;
   width: 338rpx;
  height: 128rpx;
  left: 0;
  bottom: 0;
  overflow: hidden;
}
.like_w .like{
  position: absolute;
  line-height: 72rpx;
  height: 72rpx;
  text-align: center;
  width: 100%;
  bottom: 0;
  left: 0;
  color: #ff3b30;
}
.empty{
    text-align: center;
    line-height: 200rpx;
}


.mask{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height: 100%;
  background: rgba(0,0,0,.3);
  font-size: 34rpx;
  text-align: center;
}
.mask .tankuang{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(255,255,255,.95)
}
.mask .tankuang .item{
  height: 100rpx;
  line-height: 100rpx;
  background: #ffffff;
}
.mask .tankuang .item:first-child{margin-bottom:12rpx; }