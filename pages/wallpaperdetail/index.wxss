/* pages/wallpaperdetail/index.wxss */
.preview_wap{
    position: fixed;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.bigpic{
    width: 750rpx;
    height: 1333rpx;
}
.des_pic{
    background: rgba(0,0,0,.5);
    height: 120rpx;
    color: #ffffff;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}
.tabitem{
    float: left;
    width: 150rpx;
    margin: 0 40rpx ;
    text-align: center;
    height: 100%;
}
.tabitem.firstChlid{margin-left: 70rpx;}
.tabitem image{
    width: 80rpx;
    height: 45rpx;
    display: block;
    margin: 18rpx auto 6rpx auto;
}
.tabitem text{
   font-size: 22rpx;
   margin-right: 5rpx;
}
.preview_pwap{
    position: fixed;
    top:0;
    left: 0;
    width: 100%;
    overflow-y: auto;
    display: none;
}
.preview_pwap image{
    
    width: 100%;
    height: 1333rpx;
}
.preview_pwap .mask{
    position: absolute;
    top:0;left: 0;
}
.show{
    display: block;
}