/* pages/wallpaperdetail/index.wxss */
.button-hover {
background-color:transparent;
border: 0
}
button[size=mini] {
  padding: 0;
  background:transparent;
border: 0

}
.preview_wap{
    position: fixed;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.bigpic{
    width: 750rpx;
    height: 1333rpx;
}
.des_pic{
    background: rgba(0,0,0,.5);
    height: 120rpx;
    color: #ffffff;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
}
.tabitem{
    float: left;
    width: 150rpx;
    margin: 0 40rpx ;
    text-align: center;
    height: 100%;
}
.tabitem.firstChlid{margin-left: 70rpx;}
.tabitem image{
    width: 80rpx;
    height: 45rpx;
    display: block;
    margin: 18rpx auto 6rpx auto;
}
.tabitem text{
   font-size: 22rpx;
   margin-right: 5rpx;
}
.preview_pwap{
    position: fixed;
    top:0;
    left: 0;
    width: 100%;
    overflow-y: auto;
    display: none;
}
.preview_pwap image{
    
    width: 100%;
    height: 1333rpx;
}
.preview_pwap .mask{
    position: absolute;
    top:0;left: 0;
}
.show{
    display: block;
}

.swiper-item{position: fixed!important;top:0;left: 0;width: 100%;height: 100%;background: #fff}
.mbottom{-webkit-transform: translate3d( 100% ,0, 0);transform: translate3d(100%, 0, 0);}
.mtop{-webkit-transform: translate3d(-100% ,0,  0);transform: translate3d(-100%,0,  0);}
.up{animation:up .5s forwards ;-webkit-animation: up .5s forwards ;}
@keyframes up
{
    0% {-webkit-transform: translate3d(100% ,0,  0);transform: translate3d(100%,0,  0);  }
   /* 70% {-webkit-transform: translate3d(0, -1% , 0);transform: translate3d(0, -1%, 0);  }
    80% {-webkit-transform: translate3d(0, 1% , 0);transform: translate3d(0, 1%, 0);  }*/
    100% {-webkit-transform: translate3d(0, 0 , 0);transform: translate3d(0, 0, 0); }
    
}

@-webkit-keyframes up
{
   0% {-webkit-transform: translate3d(100% ,0,  0);transform: translate3d(100%,0,  0);  }
   /* 70% {-webkit-transform: translate3d(0, -1% , 0);transform: translate3d(0, -1%, 0);  }
    80% {-webkit-transform: translate3d(0, 1% , 0);transform: translate3d(0, 1%, 0);  }*/
    100% {-webkit-transform: translate3d(0, 0 , 0);transform: translate3d(0, 0, 0); }
}
.down{animation:down .5s forwards ;-webkit-animation: down .5s forwards ;z-index: 9}
@keyframes down
{
    0% {-webkit-transform: translate3d(-100% ,0,  0);transform: translate3d(-100%, 0, 0);  }
   /* 70% {-webkit-transform: translate3d(0, 1% , 0);transform: translate3d(0, 1%, 0);  }
    80% {-webkit-transform: translate3d(0, -1% , 0);transform: translate3d(0, -1%, 0);  }*/
    100% {-webkit-transform: translate3d(0, 0 , 0);transform: translate3d(0, 0, 0); }
}

@-webkit-keyframes down
{
    0% {-webkit-transform: translate3d(-100% ,0,  0);transform: translate3d( -100%,0, 0);  }
   /* 70% {-webkit-transform: translate3d(0, 1% , 0);transform: translate3d(0, 1%, 0);  }
    80% {-webkit-transform: translate3d(0, -1% , 0);transform: translate3d(0, -1%, 0);  }*/
    100% {-webkit-transform: translate3d(0, 0 , 0);transform: translate3d(0, 0, 0); }
}