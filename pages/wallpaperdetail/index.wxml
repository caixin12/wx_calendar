<!--pages/wallpaperdetail/index.wxml-->

<view class="backUp " style="top:{{statusBarHeight}}px ">
  <navigator open-type="navigateBack" delta='1' hover-class="other-navigator-hover">
    <image src="../../images/back_light.png"></image>
  </navigator>

</view>
<view duration="500" current='{{current}}' style="height:{{wHeight}}px">
  <block wx:for="{{wallpagerlist}}">
    <view wx:if="{{item.show}}" class="swiper-item {{index<current?'mtop':(index>current?'mbottom':'mmiddle')}}  {{up==true&&upindex==index?'up':''}} {{down==true&&downindex==index?'down':''}}" bindanimationend="animationend" bindtouchstart="touchstart" bindtouchend="slide">
      <view class="preview_wap">
        <image src="https://h5.yunplus.com.cn/cases/weChatApplet/calendar/wallpaper/{{item.bigpic}}" class="bigpic" bindtap="preview_pic" mode="aspectFill"></image>

        <view class="sharecon fs24 {{isfixed==true?'shareFixed':''}} " style='height:{{barheight==""?"120rpx":barheight+"px"}}' wx:if="{{item.isyuancuan==1 && item.isShare==false}}">
          <view class='author'>原创作者：{{item.author}}</view>
          <view class='creatTime'>{{item.dataTime}}</view>
          <button open-type="share" class="sharebtn"  wx:if="{{item.isShare==false}}">分享解锁下载</button>

        </view>


        <view wx:if="{{item.isyuancuan==0 || item.isShare==true}}" style='height:{{barheight}}px' class="des_pic fs24  {{isfixed==true?'':'Prelative'}}   ">
          <view class="tabitem  ">
            <view class="iconfont eyeicon"></view>
            <text>{{item.pre_num}}浏览</text>
          </view>
          <view class="tabitem btabitem" bindtap="download_pic" data-pic="https://h5.yunplus.com.cn/cases/weChatApplet/calendar/wallpaper/{{item.bigpic}}">
            <view class="iconfont downicon"></view>

            <text>{{item.down_num}}下载</text>
          </view>

          <view class="tabitem" bindtap="likebtn_pic" data-like='p_{{islike}}' wx:if="{{isclickLike}}">
            <view class="iconfont  {{islike ?'likedicon red-color':'likeicon' }} "></view>

            <text>{{like_num}}喜欢</text>
          </view>
          <view class="tabitem" bindtap="likebtn_pic" data-like='p_{{item.islike}}' wx:else>
            <view class="iconfont   {{item.islike? 'likedicon red-color' :'likeicon' }} "></view>
            <text>{{item.like_num}}喜欢</text>
          </view>


        </view>
      </view>
      <view class="preview_pwap {{hide}}" style="height:{{wHeightM}}px" bindtap="hide_pic">

        <image src="../../images/jiemian.png" class="mask"></image>

      </view>
    </view>
  </block>
</view>

