/* pages/wallpaperdetail/index.wxss */

.backUp {
  position: fixed;
  top: 50rpx;
  width: 48rpx;
  height: 48rpx;
  left: 20rpx;
  z-index: 999;
}

.backUp image {
  width: 48rpx;
  height: 48rpx;
}

.swiper-item {
  overflow-y: auto;
  overflow-x: hidden;
}

.eyeicon::after {
  content: '\e73d';
}

.likeicon::after {
  content: '\e669';
}

.likedicon::after {
  content: '\e668';
}

.downicon::after {
  content: '\e703';
}

.bigpic {
  width: 750rpx;
}

.des_pic {
  background: rgba(0, 0, 0, 0.5);
  height: 120rpx;
  color: #fff;

  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
       position: fixed;

}

.Prelative {
  position: relative;
  background: 0;
  color: #000;
  border-bottom: 1px solid #fbfbfb;
}

.tabitem {
 flex-grow: 3;
  padding: 0 40rpx;
  text-align: center;
  height: 100%;
}

.Prelative .btabitem{
  border-left:  1px solid #fbfbfb;
    border-right:  1px solid #fbfbfb;
    
  box-shadow:10rpx 20rpx 20rpx #fbfbfb;

}

.tabitem .iconfont {
  width: 80rpx;
  height: 45rpx;
  margin: 18rpx auto 6rpx auto;
  font-size: 45rpx;
}

.tabitem text {
  font-size: 22rpx;
  margin-right: 5rpx;
}

.preview_pwap {
  top: 0;
  left: 0;
  width: 100%;
  display: none;
  position: absolute;
}

.preview_pwap image {
  width: 100%;
}

.preview_pwap .mask {
  top: 0;
  left: 0;
}

.show {
  display: block;
}

@keyframes up {
  0% {
    -webkit-transform: translate3d(100%, 0, 0);
    transform: translate3d(100%, 0, 0);
  }/* 70% {-webkit-transform: translate3d(0, -1% , 0);transform: translate3d(0, -1%, 0);  }
    80% {-webkit-transform: translate3d(0, 1% , 0);transform: translate3d(0, 1%, 0);  }*/

  100% {
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }
}

@-webkit-keyframes up {
  0% {
    -webkit-transform: translate3d(100%, 0, 0);
    transform: translate3d(100%, 0, 0);
  }/* 70% {-webkit-transform: translate3d(0, -1% , 0);transform: translate3d(0, -1%, 0);  }
    80% {-webkit-transform: translate3d(0, 1% , 0);transform: translate3d(0, 1%, 0);  }*/

  100% {
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }
}

.down {
  animation: down 0.5s forwards;
  -webkit-animation: down 0.5s forwards;
  z-index: 9;
}

@keyframes down {
  0% {
    -webkit-transform: translate3d(-100%, 0, 0);
    transform: translate3d(-100%, 0, 0);
  }/* 70% {-webkit-transform: translate3d(0, 1% , 0);transform: translate3d(0, 1%, 0);  }
    80% {-webkit-transform: translate3d(0, -1% , 0);transform: translate3d(0, -1%, 0);  }*/

  100% {
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }
}

@-webkit-keyframes down {
  0% {
    -webkit-transform: translate3d(-100%, 0, 0);
    transform: translate3d(-100%, 0, 0);
  }/* 70% {-webkit-transform: translate3d(0, 1% , 0);transform: translate3d(0, 1%, 0);  }
    80% {-webkit-transform: translate3d(0, -1% , 0);transform: translate3d(0, -1%, 0);  }*/

  100% {
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }
}
